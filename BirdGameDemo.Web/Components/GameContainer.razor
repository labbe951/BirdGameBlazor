<div class="game-container" @onclick="@_gameManager.StartGame">
    <div class="sky">
        <div class="bird" style="@_birdCss"></div>
    </div>
    <div class="ground"></div>

</div>

@code {
    GameManager _gameManager;

    string _birdCss => $"bottom: {_gameManager.Bird.DistanceFromGround}px";

    protected override void OnInitialized()
    {
        _gameManager = new GameManager();
        // När propertChanged event is raised call StateHasChanged
        _gameManager.PropertyChanged += (o, e) => StateHasChanged();
    }

}